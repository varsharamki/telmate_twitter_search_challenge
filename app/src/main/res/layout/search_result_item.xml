<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/team_card"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout  android:id="@+id/body_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            layout="@layout/header_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:id="@+id/header_include"
            />

        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:id="@+id/line1"
        android:background="@color/colorPrimaryDark"/>
            />

        <include
            layout="@layout/body_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/body_include"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:id="@+id/line"
            android:background="@color/colorPrimaryDark"/>

    <include
        layout="@layout/item_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/footer_include"

        />
</LinearLayout>
</android.support.v7.widget.CardView>